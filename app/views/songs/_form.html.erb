<h1>New Song</h1>

<%= form_for @song do |f| %>
  <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>


  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :duration %>
  <%= f.number_field :duration %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :artist_id %>
  <%= f.collection_select(:artist_id, Artist.all, :id, :name) %>


  <%= f.submit (@song.new_record? ? "Create" : "New") %>
<% end %>
